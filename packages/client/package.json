{
  "name": "dazzle-zpl",
  "version": "0.2.2",
  "description": "TypeScript client for the Dazzle ZPL print server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/StirlingMarketingGroup/dazzle",
    "directory": "packages/client"
  },
  "keywords": [
    "zpl",
    "thermal-printer",
    "label-printer",
    "print-server",
    "zebra",
    "dazzle"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}

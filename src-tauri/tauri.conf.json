{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dazzle",
  "version": "0.2.1",
  "identifier": "com.stirlingmarketinggroup.dazzle",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Dazzle",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 16,
          "y": 22
        }
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; connect-src ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/512x512.png",
      "icons/256x256.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/32x32.png"
    ],
    "windows": {
      "wix": {
        "fragmentPaths": [
          "wix/autostart.wxs"
        ],
        "componentGroupRefs": [
          "AutoStartGroup"
        ]
      }
    }
  }
}

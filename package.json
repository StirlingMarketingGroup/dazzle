{
  "name": "dazzle",
  "version": "0.2.1",
  "private": true,
  "type": "module",
  "description": "A lightweight, cross-platform ZPL print server for thermal label printers",
  "keywords": [
    "zpl",
    "thermal-printer",
    "label-printer",
    "print-server",
    "tauri",
    "react",
    "typescript",
    "cross-platform",
    "zebra"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/StirlingMarketingGroup/dazzle"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "check": "npm run lint && npm run format && npm run typecheck && npm run check:rust",
    "prepare": "husky",
    "check:rust": "cd src-tauri && cargo check",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "clsx": "^2.1.1",
    "phosphor-react": "^1.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.44.0",
    "vite": "7.3.1",
    "vitest": "^4.0.14"
  }
}
